{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/tsconfig/ts-files-only.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleDetection": "force",
    "customConditions": ["react-native"],
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ESNext",
    "strict": true,
    "paths": {
      "#native/*": ["./src/*"],
      "#native/assets/*": ["./assets/*"],
      "#native/vendor/*": ["./vendor/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "app.config.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules", "vendor"]
}

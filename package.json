{
    "name": "@repo/bleverse-monorepo",
    "packageManager": "bun@1.3.9",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "./scripts/clean.sh",
        "fresh": "bun clean && bun install",
        "latest": "bun dler update && bun i"
    },
    "workspaces": {
        "packages": [
            "apps/api",
            "apps/cli",
            "apps/desktop",
            "apps/mobile",
            "apps/web/*",
            "components/mobile/*",
            "components/web/*",
            "packages/*",
            "tooling/*"
        ]
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.15",
        "@reliverse/dler": "^2.3.4",
        "tscanner": "^0.1.3",
        "turbo": "^2.8.8",
        "ultracite": "^7.2.1"
    }
}

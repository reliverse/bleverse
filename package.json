{
  "name": "@repo/bleverse-monorepo",
  "packageManager": "bun@1.3.9",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:web": "bun -F=@repo/bleverse-web dev",
    "clean": "./scripts/clean.sh",
    "fresh": "bun clean && bun install",
    "latest": "bun dler update && bun i"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "components/mobile/*",
      "components/web/*",
      "documentation",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@reliverse/dler": "^2.3.4",
    "tscanner": "^0.1.3",
    "turbo": "^2.8.8",
    "ultracite": "^7.2.1"
  }
}
